<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/soho_background"
    tools:context=".DaysGame">

    <ProgressBar
        android:id="@+id/days_energy_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="311dp"
        android:layout_height="36dp"
        android:layout_marginTop="64dp"
        android:progressTint="@color/live_purple"
        android:scaleY="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="391dp"
        android:layout_height="236dp"
        android:layout_marginBottom="12dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/day_button_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/day_label_monday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/button20dp"
            android:backgroundTint="#E91E47"
            android:fontFamily="@font/lexend_semibold"
            android:text="@string/monday"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/day_label_tuesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/button20dp"
            android:backgroundTint="#FF5722"
            android:fontFamily="@font/lexend_semibold"
            android:text="@string/tuesday"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/day_label_wednesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/button20dp"
            android:backgroundTint="#FFEB3B"
            android:fontFamily="@font/lexend_semibold"
            android:text="@string/wednesday"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/day_label_thursday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/button20dp"
            android:backgroundTint="#4CAF50"
            android:fontFamily="@font/lexend_semibold"
            android:text="@string/thursday"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/day_label_friday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/button20dp"
            android:backgroundTint="#2196F3"
            android:fontFamily="@font/lexend_semibold"
            android:text="@string/friday"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/day_label_saturday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/button20dp"
            android:backgroundTint="#3F51B5"
            android:fontFamily="@font/lexend_semibold"
            android:text="@string/saturday"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/day_label_sunday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/button20dp"
            android:backgroundTint="#673AB7"
            android:fontFamily="@font/lexend_semibold"
            android:text="@string/sunday"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/day_button_4"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button20dp"
        android:fontFamily="@font/lexend_semibold"
        android:onClick="OnDayButtonClicked"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/soft_black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/day_button_6"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/day_button_2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button20dp"
        android:fontFamily="@font/lexend_semibold"
        android:onClick="OnDayButtonClicked"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/soft_black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/day_button_4"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/day_button_1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button20dp"
        android:fontFamily="@font/lexend_semibold"
        android:onClick="OnDayButtonClicked"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/soft_black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/day_button_3"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/day_button_0"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button20dp"
        android:fontFamily="@font/lexend_semibold"
        android:onClick="OnDayButtonClicked"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/soft_black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/day_button_2"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/day_button_3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button20dp"
        android:fontFamily="@font/lexend_semibold"
        android:onClick="OnDayButtonClicked"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/soft_black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/day_button_5"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/day_button_5"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button20dp"
        android:fontFamily="@font/lexend_semibold"
        android:onClick="OnDayButtonClicked"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/soft_black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/day_button_6"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/day_button_6"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button20dp"
        android:fontFamily="@font/lexend_semibold"
        android:onClick="OnDayButtonClicked"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/soft_black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/days_game_message"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button20dp"
        android:backgroundTint="@color/soft_purple"
        android:fontFamily="@font/lexend_semibold"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/days_game_message"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/days_energy_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>